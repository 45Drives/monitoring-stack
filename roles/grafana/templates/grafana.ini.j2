[users]
default_theme = {{ grafana_default_theme }}

#################################### Anonymous Auth ##########################
{% if grafana_anonymous_access %}
[auth.anonymous]
# enable anonymous access
enabled = True

# specify organization name that should be used for unauthenticated users
org_name = Main Org.

# specify role for unauthenticated users
org_role = Viewer
{% endif %}

[server]
cert_file = /etc/grafana/ceph-dashboard.crt
cert_key = /etc/grafana/ceph-dashboard.key
domain = {{ ansible_fqdn }}
protocol = {{ grafana_protocol }}
http_port = {{ grafana_port }}

[security]
admin_user = {{ grafana_admin_user }}
admin_password = {{ grafana_admin_password }}
allow_embedding = {{ grafana_allow_embedding }}